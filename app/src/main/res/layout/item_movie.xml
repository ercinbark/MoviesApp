<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable name="movie" type="com.ercin.moviesapp.model.movie.MovieResult"/>
    </data>
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/item_movie_poster" android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_poster"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:imageUrl="@{movie.poster_path}"/>

            <TextView
                    android:id="@+id/item_movie_title" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/item_movie_poster"
                    android:padding="8dp"
                    android:textColor="#555"
                    tools:text="Movie Title"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="@{movie.title}"/>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</layout>